<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="error" monitorInterval="3600">
    <appenders>
        <!--输出控制台配置-->
        <Console name="STDOUT" target="SYSTEM_OUT">
            <!--控制台只输出level及以上级别的信息（onMatch），其他的直接拒绝（onMismatch）-->
            <ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>
            <!--这个都知道是输出日志的格式-->
            <PatternLayout charset="UTF-8" pattern="%d{yyyy-MM-dd HH:mm:ss} %level %class{2}:%L - %msg%xEx%n"/>
        </Console>
    </appenders>

    <loggers>
        <!--配置mybatis对应的dao包路径 便于打印sql-->
        <logger name="com.eric.general.dao" level="debug" additivity="false">
            <appender-ref ref="STDOUT"/>
        </logger>
    </loggers>

</Configuration>